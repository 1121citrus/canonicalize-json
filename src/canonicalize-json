is_true() {
    echo "${1:?Need argument}" | grep -Eiq '^\s*(1|on|true|t|yes|y)\s*$'
}

set -e # -o errexit
set -u # -o nounset

# Set errtrace if it works in a subshell, disregard if unsupported
# shellcheck disable=SC3041
(set -E 2> /dev/null) && set -E  # -o errtrace

# Set pipefail if it works in a subshell, disregard if unsupported
# shellcheck disable=SC3040
(set -o pipefail 2> /dev/null) && set -o pipefail
if is_true "${DEBUG:-false}"; then
    set -o xtrace
    set -o verbose
fi

prettify() {
    if is_true "${PRETTIFY:-${PRETTY_PRINT:-false}}"; then
        cat /dev/stdin | jq .
    else
        cat /dev/stdin
    fi
} 

python /usr/local/bin/canonicalize_json.py | prettify 

